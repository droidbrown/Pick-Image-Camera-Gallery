<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_camera"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.demo.hbslenovo_3.androidimagegallerypluscamerasample.activity.CameraActivity">

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/profile_image"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_gravity="center_horizontal|center_vertical"
        android:layout_marginTop="16dp"
        android:adjustViewBounds="true"
        android:scaleType="centerInside"
        app:actualImageScaleType="centerInside"
        app:fadeDuration="500"
        app:layout_constraintLeft_toLeftOf="@+id/activity_camera"
        app:layout_constraintRight_toRightOf="@+id/activity_camera"
        app:layout_constraintTop_toTopOf="@+id/activity_camera"
        app:placeholderImage="@drawable/placeholder"
        app:roundAsCircle="true"
        app:roundedCornerRadius="5dp" />

</android.support.constraint.ConstraintLayout>
